<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane prefHeight="482.0" prefWidth="413.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="factory.controller.ProductsController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="39.0" minHeight="0.0" prefHeight="39.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="430.0" minHeight="10.0" prefHeight="388.4" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <Button fx:id="logOutButton" alignment="TOP_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false"
            onMouseDragged="#onLogOutButtonClick" text="Log out" GridPane.halignment="RIGHT"
            GridPane.valignment="CENTER">
        <GridPane.margin>
            <Insets bottom="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>
    </Button>
    <TableView fx:id="productsTable" GridPane.halignment="CENTER" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="1"
               GridPane.valignment="TOP" GridPane.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameColumn" editable="false" prefWidth="120.0" text="Name"/>
            <TableColumn fx:id="priceColumn" editable="false" prefWidth="100.0" text="Price"/>
            <TableColumn fx:id="quantityColumn" editable="false" prefWidth="102.39996337890625" text="Quantity"/>
            <TableColumn fx:id="selectQuantityColumn" prefWidth="86.4000244140625" text="Selected"/>
        </columns>
        <GridPane.margin>
            <Insets/>
        </GridPane.margin>
    </TableView>
    <Button fx:id="buyButton" mnemonicParsing="false" onMouseClicked="#onBuyButtonClick" prefHeight="35.0"
            prefWidth="86.0" style="-fx-background-color: lightgreen;" text="Order" GridPane.halignment="CENTER"
            GridPane.rowIndex="2" GridPane.valignment="CENTER">
        <GridPane.margin>
            <Insets bottom="10.0" top="10.0"/>
        </GridPane.margin>
    </Button>
</GridPane>
